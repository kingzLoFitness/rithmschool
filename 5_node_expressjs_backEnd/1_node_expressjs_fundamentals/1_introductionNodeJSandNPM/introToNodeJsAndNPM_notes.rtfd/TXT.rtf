  myPets\
\};\
\pard\pardeftab720\sl500\sa400

\f0\i\fs28 \cf5 \cb1 otherFile.js
\i0 \
\pard\pardeftab720\sl360

\f3\fs26 \cf5 \cb9 const \{ myPets \} = require(\cf10 "../pets"\cf5 );\
const \{ cat, dog \} = myPets;\
console.log(cat); 
\f5\i \cf15 // Moxie
\f3\i0 \cf5 \
console.log(dog); 
