\f0\fs28 \cf5 \cb1 \'a0this module back in our\'a0
\f3\fs26 \cf7 \cb8 main.js
\f0\fs28 \cf5 \cb1 \
\pard\pardeftab720\sl360

\f3\fs26 \cf5 \cb9 const helpers = require(\cf10 "./helpers"\cf5 );\
const moreHelpers = require(\cf10 "./moreHelpers"\cf5 );\
helpers.sayHi();\
\
console.log(moreHelpers.firstName);\
